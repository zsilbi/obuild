{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve"
  },
  "include": ["src", "test"]
}
